{% extends 'base.html.twig' %}

{% block title %}Dashboard Produits{% endblock %}

{% block body %}
<nav class="navbar navbar-expand-lg navbar-light bg-light mb-4">
    <div class="container-fluid">
        <a class="navbar-brand" href="#">Dashboard Produits</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav ms-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('produit_add') }}">Ajouter un produit</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('produit_list') }}">Liste des produits</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<div class="row">
    <div class="col-md-4">
        <h4>Ajouter un produit</h4>
        {% include 'produit/add.html.twig' with {form: form|default(null)} only %}
    </div>
    <div class="col-md-8">
        <h4>Liste des produits</h4>
        {% include 'produit/list.html.twig' with {produits: produits} only %}
    </div>
</div>
{% endblock %} 