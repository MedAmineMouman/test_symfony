{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 mb-4">Bienvenue sur notre application</h1>
            {% if app.user %}
                <p class="lead">Bonjour {{ app.user.prenom }} {{ app.user.nom }} !</p>
                <p>Vous êtes connecté avec l'adresse email : {{ app.user.email }}</p>
            {% else %}
                <p class="lead">Veuillez vous connecter ou vous inscrire pour accéder à toutes les fonctionnalités.</p>
                <div class="mt-4">
                    <a href="{{ path('app_login') }}" class="btn btn-primary me-2">Connexion</a>
                    <a href="{{ path('app_register') }}" class="btn btn-outline-primary">Inscription</a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %} 